<!--pages/home/home.wxml-->
<text class="title">hello world</text>
<button size="mini">按钮</button>

<!-- 页面跳转 -->
<!-- 1 navigator页面跳转 -->
<navigator url="/pages/detail/detail">跳转到详情页面</navigator>

<!-- 2 navigator属性(open-type) redirect 页面跳转：关闭之前的页面 -->
<navigator url="/pages/detail/detail" open-type="redirect">
  跳转到详情页面(redirect)
</navigator>

<!-- 3 页面跳转时传递数据 -->
<navigator url="/pages/detail/detail?name=gcl&age=20&height=188">跳转到详情页面</navigator>
<view>{{title}}</view>


<!-- 4 通过函数进行页面跳转 -->
<button size="mini" bind:tap="handleSwitch">跳转到详情页面</button>
